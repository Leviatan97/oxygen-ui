{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/oxygen-ui",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": [
      "src/lib"
    ]
  },
  "assets": [
    {
      "input": "src/lib/styles",
      "glob": "**/*.scss",
      "output": "styles"
    },
    {
      "input": "src/lib/themes",
      "glob": "**/*.scss",
      "output": "themes"
    }
  ]
}